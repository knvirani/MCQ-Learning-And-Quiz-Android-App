<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.essential.AboutFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background_color"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:src="@drawable/app_logo_small"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <TextView
            android:text="@string/app_name"
            android:layout_marginVertical="@dimen/standard_vertical_padding"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_page_app_title_text"
            android:textColor="@color/about_page_app_title_text"/>

        <TextView
            android:id="@+id/app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v1.0"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center|bottom"/>

        <TextView
            android:id="@+id/app_last_updated_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Last Updated: 20th April, 2022"
            android:gravity="center|bottom"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>