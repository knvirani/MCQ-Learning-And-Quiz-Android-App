<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_half_padding"/>

    <RadioGroup
        android:id="@+id/theme_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dark_theme_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/dark_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dark_text"
                android:paddingHorizontal="@dimen/standard_horizontal_padding"
                android:textSize="@dimen/mtrl_dialog_selector_text_size"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="@dimen/mtrl_dialog_selector_text_vertical_padding"
                android:layout_marginHorizontal="@dimen/standard_horizontal_padding"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/light_theme_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/light_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/light_text"
                android:paddingHorizontal="@dimen/standard_horizontal_padding"
                android:textSize="@dimen/mtrl_dialog_selector_text_size"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="@dimen/mtrl_dialog_selector_text_vertical_padding"
                android:layout_marginHorizontal="@dimen/standard_horizontal_padding"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        </com.google.android.material.card.MaterialCardView>


    </RadioGroup>

</androidx.appcompat.widget.LinearLayoutCompat>